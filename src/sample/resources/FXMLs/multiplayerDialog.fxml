<?import javafx.scene.text.Font?>

<DialogPane fx:id="multiplayerDialog" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MultiplayerDialog">

    <content>
        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">

            <Label text="Select or Create Server">
                <font>
                    <Font size="24.0" />
                </font>
                <GridPane.margin>
                    <Insets bottom="100.0" />
                </GridPane.margin>
            </Label>
            <Button fx:id="createServer" prefHeight="26.0" prefWidth="109.0" text="Create Server" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Button fx:id="joinServer" prefHeight="26.0" prefWidth="109.0" text="Join Game" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <columnConstraints>
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </content>


</DialogPane>
